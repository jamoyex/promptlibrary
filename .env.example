# Server
PORT=3000
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Webhook – backend that receives generate-from-website payloads
WEBHOOK_URL=https://your-backend.example.com/webhook/your-path

# GoHighLevel – Private Integration Token (Sub-Account) for Conversation AI / Search Agents
# Create in GHL: Settings → Integrations → Private Integrations; use Conversation AI scopes
GHL_INTEGRATION_TOKEN=

# Client (Vite) – only vars prefixed with VITE_ are exposed to the browser
# Optional: URL for "View Agent" button after successful generation (e.g. Automator.ai dashboard)
VITE_AGENT_DASHBOARD_URL=

# Base URL for "Edit Chatbot" on agent detail page (no trailing slash). Link becomes {base}/{agentId}
VITE_EDIT_AGENT_BASE_URL=

# Replit (optional – used by vite-plugin-meta-images when running on Replit)
# REPLIT_INTERNAL_APP_DOMAIN=
# REPLIT_DEV_DOMAIN=
# REPL_ID=
