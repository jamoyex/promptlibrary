# Server
PORT=3000
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Webhook – backend that receives generate-from-website payloads (chatbots)
WEBHOOK_URL=https://your-backend.example.com/webhook/your-path

# Webhook – backend that receives generate-voice-from-website payloads (voice agents)
WEBHOOK_VOICE_GENERATE_URL=https://your-backend.example.com/webhook/voice-generate

# GoHighLevel – Private Integration Token (Sub-Account) for Conversation AI / Search Agents / Voice AI
# Create in GHL: Settings → Integrations → Private Integrations; use Conversation AI and Voice AI scopes
GHL_INTEGRATION_TOKEN=

# Optional: Location ID for Voice AI List Agents (improves performance). Pass ?locationId= in API or set here.
GHL_LOCATION_ID=

# Client (Vite) – only vars prefixed with VITE_ are exposed to the browser
# Optional: URL for "View Agent" button after successful generation (e.g. Automator.ai dashboard)
VITE_AGENT_DASHBOARD_URL=

# Base URL for "Edit Chatbot" on agent detail page (no trailing slash). Link becomes {base}/{agentId}
VITE_EDIT_AGENT_BASE_URL=

# Base URL for "Edit Voice Agent" (e.g. https://app.automator.ai). Link: {base}/v2/location/{locationId}/ai-agents/voice-ai/{agentId}?mode=edit&tab=agent_details
VITE_EDIT_VOICE_AGENT_BASE_URL=

# Replit (optional – used by vite-plugin-meta-images when running on Replit)
# REPLIT_INTERNAL_APP_DOMAIN=
# REPLIT_DEV_DOMAIN=
# REPL_ID=
